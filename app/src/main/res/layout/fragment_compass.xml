<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingStart="15dp"
    android:paddingEnd="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore Now"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/img_logo_home"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_regular"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_notifi"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardCornerRadius="15dp"
                android:layout_gravity="center"
                android:elevation="6dp"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_tracking_1"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    />
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_alignParentStart="true"
                    android:textColor="#202E5C"
                    android:text="Appalachian Trail, \nUnited States"
                    android:fontFamily="@font/poppins_regular"
                    />

                <TextView
                    android:id="@+id/btn_view_1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="View more"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:elevation="4dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:fontFamily="@font/poppins_regular"
                    android:background="@drawable/background_gradial"
                    />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardCornerRadius="15dp"
                android:layout_gravity="center"
                android:elevation="6dp"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_tracking_2"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    />
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_alignParentStart="true"
                    android:textColor="#202E5C"
                    android:text="Tatra Mountains,\nPoland"
                    android:fontFamily="@font/poppins_regular"
                    />

                <TextView
                    android:id="@+id/btn_view_2"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="View more"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:elevation="4dp"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_regular"
                    android:background="@drawable/background_gradial"
                    />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardCornerRadius="15dp"
                android:layout_gravity="center"
                android:elevation="6dp"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_tracking_3"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    />
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="60dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_alignParentStart="true"
                    android:textColor="#202E5C"
                    android:text="That Son Mountains,\nViet Nam"
                    android:fontFamily="@font/poppins_regular"
                    />

                <TextView
                    android:id="@+id/btn_view_3"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="View more"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:elevation="4dp"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_regular"
                    android:background="@drawable/background_gradial"
                    />
            </RelativeLayout>

        </LinearLayout>




    </LinearLayout>


</androidx.core.widget.NestedScrollView>
